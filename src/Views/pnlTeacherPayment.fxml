<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.*?>
<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIconView?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<?import java.net.URL?>
<StackPane xmlns:fx="http://javafx.com/fxml/1" prefHeight="532.0" prefWidth="925.0"
           xmlns="http://javafx.com/javafx/8.0.171">
    <children>
        <BorderPane prefHeight="200.0" prefWidth="200.0">
            <top>
                <Pane prefHeight="32.0" prefWidth="925.0" style="-fx-background-color: #2D75E8;"
                      BorderPane.alignment="CENTER">
                    <children>
                        <Label layoutX="13.0" layoutY="5.0" text="Home/CTeacher Payment" textFill="WHITE">
                            <font>
                                <Font name="System Bold" size="14.0"/>
                            </font>
                        </Label>
                    </children>
                </Pane>
            </top>
            <left>
                <VBox prefHeight="500.0" prefWidth="277.0" BorderPane.alignment="CENTER">
                    <padding>
                        <Insets left="10.0" right="10.0" top="15.0"/>
                    </padding>
                    <children>
                        <JFXButton fx:id="btnSelectClass" prefHeight="43.0" prefWidth="257.0" ripplerFill="#0777ff"
                                   text="Select Class">
                            <graphic>
                                <FontAwesomeIconView fill="WHITE" glyphName="PLUS"/>
                            </graphic>
                        </JFXButton>
                        <Label fx:id="lblExam" text="Exam">
                            <VBox.margin>
                                <Insets left="10.0" top="15.0"/>
                            </VBox.margin>
                        </Label>
                        <Label fx:id="lblSubject" text="Subject">
                            <VBox.margin>
                                <Insets left="10.0"/>
                            </VBox.margin>
                        </Label>
                        <Label fx:id="lblTeacher" text="Teacher">
                            <VBox.margin>
                                <Insets left="10.0"/>
                            </VBox.margin>
                        </Label>
                        <Label fx:id="lblClass" text="Class">
                            <VBox.margin>
                                <Insets left="10.0"/>
                            </VBox.margin>
                        </Label>
                        <Label fx:id="lblClass1" layoutX="20.0" layoutY="119.0" text="Steam ">
                            <VBox.margin>
                                <Insets left="10.0"/>
                            </VBox.margin>
                        </Label>
                        <Label fx:id="lblClass11" layoutX="20.0" layoutY="136.0" text="Year">
                            <VBox.margin>
                                <Insets left="10.0"/>
                            </VBox.margin>
                        </Label>
                        <JFXComboBox fx:id="cmbStudent" focusColor="#6981c9" labelFloat="true" prefHeight="25.0"
                                     prefWidth="386.0" promptText="Year" unFocusColor="#a3a3a3">
                            <VBox.margin>
                                <Insets top="30.0"/>
                            </VBox.margin>
                        </JFXComboBox>
                        <JFXComboBox fx:id="cmbStatus" focusColor="#6981c9" labelFloat="true" prefHeight="25.0"
                                     prefWidth="386.0" promptText="Month" unFocusColor="#a3a3a3">
                            <VBox.margin>
                                <Insets top="30.0"/>
                            </VBox.margin>
                        </JFXComboBox>
                        <JFXComboBox fx:id="cmbStatus1" focusColor="#6981c9" labelFloat="true" layoutX="20.0"
                                     layoutY="260.0" prefHeight="25.0" prefWidth="386.0" promptText="Teacher"
                                     unFocusColor="#a3a3a3">
                            <VBox.margin>
                                <Insets top="30.0"/>
                            </VBox.margin>
                        </JFXComboBox>
                        <JFXTextField focusColor="#6981c9" labelFloat="true" promptText="Payment Value"
                                      unFocusColor="#a3a3a3">
                            <VBox.margin>
                                <Insets top="30.0"/>
                            </VBox.margin>
                        </JFXTextField>
                        <HBox alignment="CENTER" layoutX="20.0" layoutY="335.0" prefHeight="64.0" prefWidth="257.0">
                            <children>
                                <JFXButton fx:id="btnAdd" prefHeight="46.0" prefWidth="126.0" text="Pay"/>
                                <JFXButton fx:id="btnSave" layoutX="84.0" layoutY="19.0" prefHeight="46.0"
                                           prefWidth="125.0" text="Pay All">
                                    <HBox.margin>
                                        <Insets left="5.0"/>
                                    </HBox.margin>
                                </JFXButton>
                            </children>
                            <VBox.margin>
                                <Insets top="25.0"/>
                            </VBox.margin>
                        </HBox>
                    </children>
                </VBox>
            </left>
            <center>
                <TableView fx:id="tblAttendance" prefHeight="218.0" prefWidth="450.0" BorderPane.alignment="CENTER">
                    <columns>
                        <TableColumn fx:id="tcSId" prefWidth="75.0" text="Id" visible="false"/>
                        <TableColumn fx:id="tcStudent" prefWidth="316.0" text="Payment ID"/>
                        <TableColumn fx:id="tcStatus" prefWidth="330.0" text="Teacher"/>
                        <TableColumn fx:id="tcStudent1" prefWidth="316.0" text="Status"/>
                    </columns>
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                    </columnResizePolicy>
                </TableView>
            </center>
        </BorderPane>
    </children>
    <stylesheets>
        <URL value="@../CSS/Table.css"/>
        <URL value="@../CSS/Scence.css"/>
    </stylesheets>
</StackPane>
