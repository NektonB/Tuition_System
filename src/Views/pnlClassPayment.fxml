<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXComboBox?>
<?import com.jfoenix.controls.JFXTextField?>
<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIconView?>
<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<StackPane onKeyReleased="#payAll_Key" prefHeight="532.0" prefWidth="925.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controllers.ClassPaymentController">
    <children>
        <BorderPane prefHeight="200.0" prefWidth="200.0">
            <top>
                <Pane prefHeight="32.0" prefWidth="925.0" style="-fx-background-color: #293039;" BorderPane.alignment="CENTER">
                    <children>
                        <Label layoutX="13.0" layoutY="5.0" text="Home/Class Payment" textFill="#fcb76e">
                            <font>
                                <Font name="System Bold" size="14.0" />
                            </font>
                        </Label>
                    </children>
                </Pane>
            </top>
            <left>
                <VBox prefHeight="500.0" prefWidth="277.0" BorderPane.alignment="CENTER">
                    <padding>
                        <Insets left="10.0" right="10.0" top="15.0" />
                    </padding>
                    <children>
                        <JFXButton fx:id="btnSelectClass" onAction="#load_Class" prefHeight="43.0" prefWidth="257.0" ripplerFill="#0777ff" text="Select Class">
                            <graphic>
                                <FontAwesomeIconView fill="WHITE" glyphName="PLUS" />
                            </graphic>
                        </JFXButton>
                        <Label fx:id="lblExam" text="Exam" textFill="#0400ff">
                            <VBox.margin>
                                <Insets left="10.0" top="15.0" />
                            </VBox.margin>
                            <font>
                                <Font name="System Bold" size="15.0" />
                            </font>
                        </Label>
                        <Label fx:id="lblSubject" text="Subject" textFill="#0400ff">
                            <VBox.margin>
                                <Insets left="10.0" />
                            </VBox.margin>
                            <font>
                                <Font name="System Bold" size="15.0" />
                            </font>
                        </Label>
                        <Label fx:id="lblTeacher" text="Teacher" textFill="#0400ff">
                            <VBox.margin>
                                <Insets left="10.0" />
                            </VBox.margin>
                            <font>
                                <Font name="System Bold" size="15.0" />
                            </font>
                        </Label>
                        <Label fx:id="lblClass" text="Class" textFill="#0400ff">
                            <VBox.margin>
                                <Insets left="10.0" />
                            </VBox.margin>
                            <font>
                                <Font name="System Bold" size="15.0" />
                            </font>
                        </Label>
                        <JFXComboBox fx:id="cmbYear" focusColor="#6981c9" labelFloat="true" prefHeight="25.0" prefWidth="386.0" promptText="Year" unFocusColor="#a3a3a3">
                            <VBox.margin>
                                <Insets top="15.0" />
                            </VBox.margin>
                        </JFXComboBox>
                        <JFXComboBox fx:id="cmbMonth" focusColor="#6981c9" labelFloat="true" prefHeight="25.0" prefWidth="386.0" promptText="Month" unFocusColor="#a3a3a3">
                            <VBox.margin>
                                <Insets top="30.0" />
                            </VBox.margin>
                        </JFXComboBox>
                        <JFXTextField fx:id="txtIndexNumber" onKeyReleased="#payFees_Key" promptText="Index Number">
                            <VBox.margin>
                                <Insets top="30.0" />
                            </VBox.margin>
                        </JFXTextField>
                        <JFXComboBox fx:id="cmbStudent" focusColor="#6981c9" labelFloat="true" layoutX="20.0" layoutY="260.0" prefHeight="25.0" prefWidth="386.0" promptText="Student" unFocusColor="#a3a3a3">
                            <VBox.margin>
                                <Insets top="30.0" />
                            </VBox.margin>
                        </JFXComboBox>
                        <JFXComboBox fx:id="cmbStatus" focusColor="#6981c9" labelFloat="true" prefHeight="25.0" prefWidth="386.0" promptText="Pay Status" unFocusColor="#a3a3a3">
                            <VBox.margin>
                                <Insets top="30.0" />
                            </VBox.margin>
                        </JFXComboBox>
                        <HBox alignment="CENTER" layoutX="20.0" layoutY="335.0" prefHeight="64.0" prefWidth="257.0">
                            <children>
                                <JFXButton fx:id="btnPay" onAction="#payFees" prefHeight="46.0" prefWidth="126.0" text="Pay" />
                                <JFXButton fx:id="btnPayAll" layoutX="84.0" layoutY="19.0" onAction="#payAll" prefHeight="46.0" prefWidth="125.0" text="Pay All">
                                    <HBox.margin>
                                        <Insets left="5.0" />
                                    </HBox.margin>
                                </JFXButton>
                            </children>
                            <VBox.margin>
                                <Insets top="10.0" />
                            </VBox.margin>
                        </HBox>
                    </children>
                </VBox>
            </left>
            <center>
                <TableView fx:id="tblClassPayment" onKeyReleased="#selectPayDetail_key" prefHeight="218.0" prefWidth="450.0" BorderPane.alignment="CENTER">
                    <columns>
                        <TableColumn fx:id="tcPaymentId" prefWidth="316.0" text="Payment ID" visible="false" />
                        <TableColumn fx:id="tcSId" prefWidth="75.0" text="Student ID" visible="false" />
                        <TableColumn fx:id="tcStudent" prefWidth="330.0" text="Student" />
                        <TableColumn fx:id="tcStatus" prefWidth="316.0" text="Student" />
                    </columns>
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                    </columnResizePolicy>
                </TableView>
            </center>
        </BorderPane>
    </children>
    <stylesheets>
        <URL value="@../CSS/Table.css" />
        <URL value="@../CSS/Scence.css" />
    </stylesheets>
</StackPane>
